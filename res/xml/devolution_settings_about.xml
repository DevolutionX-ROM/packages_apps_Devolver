<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/devolution_about_title">

    <!-- Devolution X logo -->
    <com.android.settingslib.widget.LayoutPreference
        android:key="devolution_logo"
        android:layout="@layout/devolution_logo"
        android:clickable="true"
        settings:controller="com.android.settings.deviceinfo.firmwareversion.DevolutionXLogoPreferenceController"/>

    <!-- About Devolution X -->
    <PreferenceCategory
        android:key="devolution_about_summary"
        android:title="@string/devolution_about_summary" />

        <Preference
            android:selectable="false"
            settings:searchable="false"
            android:summary="@string/devolution_about_info_summary" />

        <!-- Devolution X Changelog -->
        <Preference
            android:key="devolution_changelog"
            android:icon="@drawable/ic_changelog"
            android:title="@string/changelog_devolution_title"
            android:summary="@string/changelog_devolution_summary">
            <intent android:action="android.intent.action.MAIN"
                 android:targetPackage="com.android.settings"
                 android:targetClass="com.devolution.settings.fragments.about.ChangelogActivity"/>
        </Preference>

        <Preference
            android:title="@string/devolution_website_title"
            android:icon="@drawable/ic_settings_devolution_about"
            android:summary="@string/devolution_website_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://devolution-x.org" />
        </Preference>

        <Preference
            android:title="@string/devolution_telegram_title"
            android:icon="@drawable/ic_telegram"
            android:summary="@string/devolution_telegram_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/DevolutionX" />
        </Preference>

        <Preference
            android:title="@string/devolution_twitter_title"
            android:icon="@drawable/ic_twitter"
            android:summary="@string/devolution_twitter_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://twitter.com/DevolutionXROM" />
        </Preference>

        <Preference
            android:title="@string/devolution_github_title"
            android:icon="@drawable/ic_github"
            android:summary="@string/devolution_github_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/Devolution-X" />
        </Preference>

    <!-- Team Devolution X -->
    <PreferenceCategory
        android:key="about_team"
        android:title="@string/devolution_about_team" />

        <Preference
            android:title="@string/devolution_about_founder_1"
            android:summary="@string/devolution_about_founder_1_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://linktr.ee/joeyhuab" />
        </Preference>

        <Preference
            android:title="@string/devolution_about_founder_2"
            android:summary="@string/devolution_about_founder_2_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/Anierin_Bliss" />
        </Preference>

        <Preference
            android:title="@string/devolution_about_founder_3"
            android:summary="@string/devolution_about_founder_3_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/RealAkito" />
        </Preference>

        <Preference
            android:title="@string/devolution_about_source_staff"
            android:summary="@string/devolution_about_source_staff_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/tejas101k" />
        </Preference>

        <Preference
            android:title="@string/devolution_about_mr_staff_1"
            android:summary="@string/devolution_about_mr_staff_1_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/Justasic" />
        </Preference>

        <Preference
            android:title="@string/devolution_about_mr_staff_2"
            android:summary="@string/devolution_about_mr_staff_2_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/manid_reddy" />
        </Preference>

        <Preference
            android:title="@string/devolution_about_mr_staff_3"
            android:summary="@string/devolution_about_mr_staff_3_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/A7E28" />
        </Preference>

        <Preference
            android:title="@string/devolution_about_tg_staff"
            android:summary="@string/devolution_about_tg_staff_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/Manvir901" />
